<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN"
    "http://directwebremoting.org/schema/dwr30.dtd">

<dwr>
  <allow>
    <create creator="new">
      <param name="class"
             value="jp.enpit.cloud.eventspiral.controller.LoginController"
      />
    </create>
    <create creator="new">
      <param name="class"
             value="jp.enpit.cloud.eventspiral.controller.LogoutController"
      />
    </create>
    <create creator="new">
      <param name="class"
             value="jp.enpit.cloud.eventspiral.controller.SignUpController"
      />
    </create>
    <convert converter="bean"
             match="jp.enpit.cloud.eventspiral.view.*"
    />
    <convert converter="exception" match="java.lang.Exception" />
    <convert converter="bean" match="java.lang.StackTraceElement" />
  </allow>
</dwr>